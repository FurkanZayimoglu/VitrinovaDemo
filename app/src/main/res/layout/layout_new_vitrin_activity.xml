<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintBottom_toBottomOf="parent"
    app:cardCornerRadius="9dp"
    android:layout_width="340dp"
    android:layout_margin="12dp"
    android:layout_height="wrap_content" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ivNewCoverActivity"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <Button
            android:background="@drawable/roundcorners"
            android:text="@string/takip_et"
            android:layout_marginEnd="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivNewCoverActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivNewVitrinLogoActivity"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivNewCoverActivity"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:textColor="@color/white"
            android:background="@color/orange"
            android:id="@+id/tvLogoActivity"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/ivNewVitrinLogoActivity"
            app:layout_constraintLeft_toLeftOf="@+id/ivNewVitrinLogoActivity"
            app:layout_constraintRight_toRightOf="@+id/ivNewVitrinLogoActivity"
            app:layout_constraintTop_toTopOf="@+id/ivNewVitrinLogoActivity"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:textSize="14sp"
            android:id="@+id/tvNewNameActivity"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toRightOf="@+id/ivNewVitrinLogoActivity"
            app:layout_constraintTop_toTopOf="@+id/ivNewVitrinLogoActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="12sp"
            android:id="@+id/tvNewDefinitionActivity"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivNewVitrinLogoActivity"
            app:layout_constraintTop_toBottomOf="@+id/tvNewNameActivity"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="12dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:textSize="14sp"
            android:id="@+id/tvNewProductCountActivity"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ivNewVitrinLogoActivity"
            app:layout_constraintTop_toBottomOf="@+id/tvNewDefinitionActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>